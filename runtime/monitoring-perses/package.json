{
  "name": "perses",
  "version": "0.1.0",
  "private": true,
  "description": "Perses dashboard for VictoriaMetrics monitoring",
  "type": "module",
  "scripts": {
    "perses:download": "node scripts/download-perses.js",
    "perses:login": "node scripts/login-percli.js",
    "perses:setup": "pnpm perses:login && pnpm dac:deploy",
    "dac:build": "cd dac && ../bin/percli dac build -d . -ojson",
    "dac:apply": "bin/percli apply -d dac/built",
    "dac:deploy": "pnpm dac:build && pnpm dac:apply",
    "dac:setup": "panic 'dac already configured' && dac && ../bin/percli dac setup --version v0.52.0 && rm -f example.cue"
  },
  "dependencies": {
    "tar-fs": "^3.0.6",
    "yaml": "^2.8.1"
  }
}
